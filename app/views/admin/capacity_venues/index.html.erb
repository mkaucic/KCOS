<header class="header header--double">
	<%= link_to admin_venues_path, class: "btn btn--back" do %>
		<div class="arrow--left"></div>
	<% end %>
	<div class="header__content">
		<h1><%= @venue.name %></h1>
	</div>
  

  <%= link_to "Novi kapacitet", new_admin_venue_capacity_venue_path, class: "btn btn--primary btn--large" %>

</header>

<section class="section section--12 section--double">
  <table class="datatable">
    <thead>
      <tr class="table__head--wrap">
        <th class="table__head col col--4"><%= "Naziv" %></th>
        <th class="table__head col col--1"><%= "Kapacitet" %></th>
        <th class="table__head col col--1"><%= "Radnje" %></th>
      </tr>
    </thead>

    <tbody>
      <% @capacities.each do |itt| %>
        <tr id=<%= dom_id(@venue) %> class="table__item--wrap">
          <td class="table__item col col--4"><%= itt.name %></td>
          <td class="table__item col col--1"><%= itt.capacity%></td>
          <td class="table__item table__icon--wrap col col--1">
			<%= link_to edit_admin_venue_capacity_venue_path(@venue.id, itt.id), class: "table__icon" do %>
              <%= inline_svg "icons/pen-group-3.svg" %>
            <% end %>
            <%= link_to admin_venue_capacity_venue_path(@venue.id, itt.id), method: :delete, data: { confirm: 'Jesi li siguran?' }, class: "table__icon"  do %>
                <%= inline_svg "icons/trash-simple.svg" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

<script>
  init_datatable({lang: "<%= I18n.locale %>"});
</script>