<header class="header header--double">
  <h1><%= "Dokumenti" %></h1>

  <%= link_to "Novi dokument", new_admin_document_path, class: "btn btn--primary btn--large" %>
</header>

<section class="section section--12 section--double">
  
  <table class="datatable">
    <thead>
      <tr class="table__head--wrap">
        <th class="table__head col col--6"><%= "Naziv dokumenta" %> </th>
        <th class="table__head col col--1"><%= "Dokument" %></th>
        <th class="table__head col col--1"><%= "Radnje" %></th>
      </tr>
    </thead>

    <tbody>
      <% @documents.each do |document| %>
        <tr id=<%= dom_id(document) %> class="table__item--wrap">
          <td class="table__item col col--6"><%= document.title %></td>
          <td class="table__item table__icon--wrap col col--1">
            <%= link_to document.link_url, target: "_blank", class: "table__icon" do %>
              <%= inline_svg "icons/blank-file.svg" %>
            <% end %>
          </td>

          <td class="table__item table__icon--wrap col col--1">

            <%= link_to admin_document_path(document), class: "table__icon" do %>
              <%= inline_svg "icons/eye-ban-18.svg" %>
            <% end %>

            <%= link_to edit_admin_document_path(document), class: "table__icon" do %>
              <%= inline_svg "icons/pen-group-3.svg" %>
            <% end %>

            <%= link_to admin_document_path(document), method: :delete, data: { confirm: t('delete_confirm') }, class: "table__icon" do %>
              <%= inline_svg "icons/trash-simple.svg" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

<script>
  init_datatable({lang: "<%= I18n.locale %>"});
</script>