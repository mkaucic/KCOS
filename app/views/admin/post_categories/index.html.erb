<header class="header header--double">
  <h1><%= "Kategorije objava" %></h1>

  <%= link_to "Nova kategorija", new_admin_post_category_path, class: "btn btn--primary btn--medium" %>
</header>

<section class="section section--12 section--double">
  
  <table class="datatable">
    <thead>
      <tr class="table__head--wrap">
        <th class="table__head col col--6"><%= "Kategorija" %> </th>
        <th class="table__head col col--1"><%= "Radnje" %></th>
      </tr>
    </thead>

    <tbody>
      <% @post_categories.each do |cc| %>
        <tr id=<%= dom_id(cc) %> class="table__item--wrap">
          <td class="table__item col col--6"><%= cc.name %></td>
          
          <td class="table__item table__icon--wrap col col--1">

            <%= link_to edit_admin_post_category_path(cc), class: "table__icon" do %>
              <%= inline_svg "icons/pen-group-3.svg" %>
            <% end %>

            <%= link_to admin_post_category_path(cc), method: :delete, data: { confirm: t('delete_confirm') }, class: "table__icon" do %>
              <%= inline_svg "icons/trash-simple.svg" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

<script>
  init_datatable({lang: "<%= I18n.locale %>"});
</script>