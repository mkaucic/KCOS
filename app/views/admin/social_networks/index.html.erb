<header class="header header--double">
  <h1><%= "Društvene mreže" %></h1>
  <%= link_to 'Dodaj poveznicu', new_admin_social_network_path, class: "btn btn--primary btn--medium" %>
</header>

<section class="section section--12 section--double users">
  <table class="clear-admin-agent-styles table datatable">
    <thead>
      <tr class="table__head--wrap">
        <th class="table__head col col--5"><%= "Ime" %></th>
        <th class="table__head col col--2"><%= "Poveznica" %></th>
        <th class="table__head col col--1"><%= "Radnje" %></th>
      </tr>
    </thead>

    <tbody>
      <% @social_networks.each do |social_network| %>
        <tr id=<%= dom_id(social_network) %> class="table__item--wrap">
          <td class="table__item col col--5"><%= social_network.name %></td>
          <td class="cbx table__item table__icon--wrap col col--2">
            <span><%= link_to social_network.name, social_network.url%>&nbsp&nbsp(<%=social_network.url%>)</span>
          </td>
          <td class="cbx table__item table__icon--wrap col col--1">
            <%= link_to edit_admin_social_network_path(social_network.id), class: "table__icon" do %>
              <%= inline_svg "icons/pen-group-3.svg" %>
            <% end %>
            <%= link_to admin_social_network_path(social_network.id), method: :delete, data: { confirm: 'Jesi li siguran?' }, class: "table__icon"  do %>
              <%= inline_svg "icons/trash-simple.svg" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table> 
</section>

<script>
  init_datatable({lang: "<%= I18n.locale %>"});
</script>