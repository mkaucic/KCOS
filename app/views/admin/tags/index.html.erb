<header class="header header--double">
  <h1><%= "Tagovi" %></h1>
</header>

<section class="section section--12 section--double">
  <table class="datatable">
    <thead>
      <tr class="table__head--wrap">
        <th class="table__head col col--5"><%= "Ime" %></th>
        <th class="table__head col col--1"><%= "Istaknuto" %></th>
        <th class="table__head col col--1"><%= "Radnje" %></th>
      </tr>
    </thead>

    <tbody>
      <% @tags.each do |tag| %>
        <tr id=<%= dom_id(tag) %> class="table__item--wrap">
          <td class="table__item col col--5"><%= tag.name %></td>
          <td class="cbx table__item table__icon--wrap col col--1">
            <%= link_to admin_tag_toggle_starred_path(id: tag.id), method: :put, class: "table__icon #{'active' if tag.starred}" do %>
              <%= inline_svg "icons/star.svg", title: tag.starred ? "Ukloni iz istaknutih" : "Istakni" %>
            <% end %>
          </td>
          <td class="table__item col col--1">
            <%= link_to admin_tag_path(tag.id), class: "table__icon" do %>
              <%= inline_svg "icons/eye-ban-18.svg" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

<script>
  init_datatable({lang: "<%= I18n.locale %>"});
</script>