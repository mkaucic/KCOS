<header class="header header--double">
  <h1><%= "Prostori" %></h1>
  <%= link_to 'Novi prostor', new_admin_venue_path, class: "btn btn--primary btn--large" %>
</header>



<section class="section section--12 section--double">
  <table class="datatable table__icon--4">
    <thead>
      <tr class="table__head--wrap">
        <th class="table__head col col--1"><%= "Naziv" %></th>
        <th class="table__head col col--4"><%= "Opis" %></th>
        <th class="table__head col col--1"><%= "Kapaciteti" %></th>
        <th class="table__head col col--1"><%= "Radnje" %></th>
      </tr>
    </thead>

    <tbody class="sortable" data-url='<%=sort_admin_venues_path %>'>
      <% @venues.each do |venue| %>
        <tr id=<%= dom_id(venue) %> class="table__item--wrap">
          <td class="table__item col col--1"><%= venue.name %></td>
          <td class="table__item col col--4"><%= sanitize venue.description.html_safe%></td>
          <td class="table__item col col--1"><%= link_to "Kapaciteti",admin_venue_capacity_venues_path(venue.id)%></td>
          <td class="table__item table__icon--wrap col col--1">
            <%= link_to admin_venue_path(venue.id), class: "table__icon" do %>
              <%= inline_svg "icons/eye-ban-18.svg" %>
            <% end %>
            <%= link_to admin_edit_capacities_path(venue.id), class: "table__icon" do %>
              <%= inline_svg "icons/pen-group-3.svg" %>
            <% end %>
            <%= link_to admin_venue_path(venue.id), method: :delete, data: { confirm: 'Jesi li siguran?' }, class: "table__icon"  do %>
                <%= inline_svg "icons/trash-simple.svg" %>
            <% end %>
            <%= link_to admin_venue_venue_images_path(venue.id), class: "table__icon" do %>
              <%= image_tag "icons/gallery.png" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

