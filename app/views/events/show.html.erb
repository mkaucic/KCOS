<% content_for :image, @event.image_url(:medium)%>
<% content_for :description, seo_description((@event.brief.nil? ? @event.text : @event.brief)) %>
<% content_for :title, "KC - " + @event.headline%>
<%= link_to events_path do %>
  Povratak na DogaÄ‘anja
<% end %>
<%=@event.event_type %>
<%=@event.headline %>
<% if @event.event_images.blank? %>
  <% unless @event.image.blank? %>
    <%= image_tag @event.image %>
  <% end %>
<% else %>
  <% @event.event_images.each do |image| %>
    <%= image_tag image.image %>
  <% end %>
<% end %>
<% unless @event.start_date.blank? %><%=@event.start_date.to_formatted_s(:custom)  %> <% if @event.end_date %>- <%=@event.end_date.to_formatted_s(:custom)  %> <% end %> <% end %>
<% unless @event.starting_at.blank? %><%=@event.starting_at.to_s(:time) if @event.starting_at != nil %> <% end %>
<%=render_with_tags(@event.text) %>
