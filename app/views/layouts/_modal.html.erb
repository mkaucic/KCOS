<div id="modal" class="modal">

	<div class="modal-content">
	  <span class="close">&times;</span>
	  <div id="modal-injected_content"></div>
	</div>
</div>

<script>
	$(".close").click(function() {
    $("#modal").fadeOut(200);
    $("body").removeClass("modal-open");
	});
	
	$(document).on('keyup',function(evt) {
	    if (evt.keyCode == 27) {
	  		$("#modal").slideUp(200);
	    }
	});
</script>